<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">

    <!-- Textview für Confirm Identity -->
    <TextView
        android:id="@+id/confirm_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Confirm Identity"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <!-- Imageview für Fingerabdruck -->
    <ImageView
        android:id="@+id/fingerprint_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/confirm_identity"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fingerprint_icon"/>

</RelativeLayout>